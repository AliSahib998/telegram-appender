<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}</pattern>
        </encoder>
    </appender>

    <appender name="TELEGRAM"
              class="com.telegram.appender.telegram.TelegramAppender">
        <botToken>5820379189:AAFDcC3OLqYGTWbhlDHTj_o30cTwnADZC6o</botToken>
        <chatId>-1001636948073</chatId>
        <Layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>{ "level": "%level" , "app_name" : "${application_name}", "x-trace-id" : "%X{X-Trace-ID}",
                "thread": "%thread", "message": "%message %ex", "environment": "${application_env}" }</Pattern>
        </Layout>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="TELEGRAM"/>
    </root>
</configuration>